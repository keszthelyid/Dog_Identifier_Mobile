<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dog_Identifier_Mobile.Scan"
             Title="Scan">
    
    <ContentPage.Content>
        <Grid>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            
            <StackLayout Grid.Row="0">
                <Label Text="Last scan:" HorizontalOptions="Center" Margin="10" FontSize="Large" FontAttributes="Bold"/>
                <Image x:Name="img_display" HeightRequest="500" />
            </StackLayout>
            
            <ActivityIndicator x:Name="activity" Grid.Row="0" Color="WhiteSmoke" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="100" WidthRequest="100" />
            
            <StackLayout Grid.Row="1">
                <Button x:Name="btn_camera" Text="Take a new Photo with camera" Padding="23" Margin="20,0,20,0" Clicked="btn_camera_Clicked"/>
                <Button x:Name="btn_gallery" Text="Select a new Photo from gallery" Padding="23" Margin="20,0,20,0" Clicked="btn_gallery_Clicked"/>
            </StackLayout>
                  
        </Grid>
    </ContentPage.Content>
</ContentPage>